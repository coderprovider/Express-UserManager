{
  "name": "user-management",
  "version": "0.0.0",
  "description": "A package for user management: registration, login, get, search",
  "main": "src/index.js",
  "scripts": {
    "test": "mocha __tests__/\"{,/**/}*.test.js\"",
    "test:watch": "npm test -- -w",
    "test:coverage": "nyc npm test",
    "commit": "git-cz",
    "lint": "./node_modules/.bin/eslint ./src",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simplymichael/user-management.git"
  },
  "keywords": [
    "user",
    "authentication",
    "registration",
    "login"
  ],
  "author": "simplymichael <simplymichaelorji@gmail.com> (https://github.com/simplymichael)",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/simplymichael/user-management/issues"
  },
  "homepage": "https://github.com/simplymichael/user-management#readme",
  "devDependencies": {
    "chai": "4.2.0",
    "chai-http": "4.3.0",
    "commitizen": "4.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.13.0",
    "ghooks": "2.0.4",
    "mocha": "8.2.1",
    "nyc": "15.1.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run lint && npm run test:coverage"
    }
  },
  "dependencies": {
    "bcrypt": "5.0.0",
    "cookie-parser": "1.4.5",
    "dotenv": "8.2.0",
    "email-validator": "2.0.4",
    "express": "4.17.1",
    "express-session": "1.17.1",
    "express-validator": "6.6.1",
    "http-errors": "1.8.0",
    "jsonwebtoken": "8.5.1",
    "mongoose": "5.10.15",
    "morgan": "1.10.0",
    "random-bytes": "1.0.0"
  }
}
